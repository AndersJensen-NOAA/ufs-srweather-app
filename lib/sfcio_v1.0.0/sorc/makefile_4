LIB	= ../libsfcio_v1.0.0_4.a
INCMOD	= ../incmod/
FC	= $(FCS)
FFLAGS  = $(FFLAGSM)
FFLAGS  = -traceback -g -xHOST -convert big_endian -assume byterecl  -I$(INCMOD) -FR $(shell nf-config --fflags)
FFLAGB  = -O2 -traceback -g -xHOST -convert big_endian -assume byterecl 


$(LIB):	$(LIB)(sfcio_module.o)
.f.a:
	$(FC) -c $(FFLAGS) $<
	$(AR) $(ARFLAGS) $@ $*.o
	rm -f $*.o
	mv $*.mod $(INCMOD)
